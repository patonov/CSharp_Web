@page
@model WebAppOne.Pages.DataDerivedModel

@{
    ViewData["Title"] = "DataDerived";
}

<h1>DataDerived</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].IssueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].CurrencyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Invoice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
